{
  "name": "airhorn-mono",
  "version": "5.0.0",
  "description": "Cloud Notification Library",
  "repository": "https://github.com/jaredwray/airhorn.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "pnpm -r test",
    "test:ci": "pnpm -r test:ci",
    "website:build": "pnpm docula build",
    "website:serve": "pnpm docula serve",
    "version:sync": "tsx scripts/version-sync.ts",
    "publish:airhorn": "pnpm recursive --filter 'airhorn' run build:publish",
    "publish:packages": "pnpm publish:airhorn && pnpm recursive --filter '!airhorn' run build:publish",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "docula": "^0.20.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
