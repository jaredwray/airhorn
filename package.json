{
  "name": "airhorn",
  "version": "2.0.3",
  "description": "Cloud Notification Library",
  "type": "module",
  "exports": "./dist/airhorn.js",
  "types": "./dist/airhorn.d.ts",
  "engines": {
    "node": ">=14.16"
  },
  "repository": "https://github.com/jaredwray/airhorn.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "xo --fix && NODE_OPTIONS=--experimental-vm-modules jest --coverage --detectOpenHandles",
    "clean": "rimraf ./dist ./coverage ./node_modules ./package-lock.json ./yarn.lock",
    "prepare": "yarn build",
    "build": "tsc --project tsconfig.dist.json"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.1",
    "eslint-plugin-jest": "^27.6.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "xo": "^0.56.0"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.485.0",
    "@aws-sdk/client-sns": "^3.485.0",
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.6.5",
    "ecto": "^2.2.5",
    "firebase-admin": "^11.11.1",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "twilio": "^4.20.0",
    "winston": "^3.11.0"
  },
  "files": [
    "dist"
  ],
  "xo": {
    "plugins": [
      "jest"
    ],
    "extends": [
      "plugin:jest/recommended"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": 0,
      "@typescript-eslint/object-curly-spacing": 0,
      "@typescript-eslint/parameter-properties": 0,
      "@typescript-eslint/no-unsafe-call": 0,
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-unsafe-return": 0,
      "@typescript-eslint/no-redundant-type-constituents": 0,
      "no-console": 1,
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never",
          "mjs": "never"
        }
      ]
    }
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "resolver": "ts-jest-resolver",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json",
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/*.test.(ts)",
      "**/test/providers/*.test.(ts)"
    ],
    "testEnvironment": "node"
  }
}
