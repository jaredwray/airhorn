{
  "name": "airhorn",
  "version": "1.0.4",
  "description": "Cloud Notification Library",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14.16"
  },
  "repository": "https://github.com/jaredwray/airhorn.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "xo && NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "clean": "rm -rf ./dist && rm -rf ./coverage && rm -rf ./node_modules && rm -rf ./package-lock.json",
    "build": "tsc --project tsconfig.dist.json"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "dotenv": "^16.0.3",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^0.55.1",
    "eslint-plugin-jest": "^27.1.6",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "^4.9.3",
    "xo": "^0.53.1"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.204.0",
    "@sendgrid/mail": "^7.7.0",
    "aws-sdk": "^2.1248.0",
    "ecto": "^2.1.3",
    "firebase-admin": "^11.2.0",
    "fs-extra": "^11.1.0",
    "got": "^12.5.3",
    "gray-matter": "^4.0.3",
    "twilio": "^3.83.4",
    "winston": "^3.8.2"
  },
  "files": [
    "dist"
  ],
  "xo": {
    "plugins": [
      "jest"
    ],
    "extends": [
      "plugin:jest/recommended"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": 0,
      "@typescript-eslint/object-curly-spacing": 0,
      "@typescript-eslint/parameter-properties": 0,
      "@typescript-eslint/no-unsafe-call": 0,
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-unsafe-return": 0,
      "@typescript-eslint/no-redundant-type-constituents": 0,
      "no-console": 1,
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never",
          "mjs": "never"
        }
      ]
    }
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "resolver": "ts-jest-resolver",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json",
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/*.test.(ts)",
      "**/test/providers/*.test.(ts)"
    ],
    "testEnvironment": "node"
  }
}
